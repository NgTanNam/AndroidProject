<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <RelativeLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:alpha="0.3"
                android:src="@drawable/bg_grey"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/bg" />
        </RelativeLayout>

        <ImageView
            android:layout_marginLeft="25dp"
            android:id="@+id/image"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/hamburger" />
        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:alpha="0.2"
                android:src="@drawable/bg_grey_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/bg_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/btdetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_navigate_next_24" />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginRight="50dp"
            android:layout_marginLeft="150dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:fontFamily="@font/dancingscript_bold"
                android:id="@+id/tvname"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:paddingBottom="10dp"
                android:gravity="bottom"
                android:text="Hamburger"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:fontFamily="@font/sans_italic"
                android:id="@+id/tvid"
                android:textSize="16dp"
                android:textColor="#5C5757"
                android:text="8$"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>